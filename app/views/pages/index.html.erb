<h1 class="text-md-center fw-bold">Personajes de Harry Potter</h1>
<div class="container-md">
    <table class="table table-dark table-striped border border-danger table-bordered">
      <thead>
        <tr>
          <th class="table-dark text-md-center" scope="col">Name</th>
          <th class="table-dark text-md-center" scope="col">Location</th>
          <th class="table-dark text-md-center" scope="col">House</th>
        </tr>
      </thead>
      <tbody>
        <% @characters.each do |character| %>
          <tr>
              <th scope="row"><%= character.name %></th>
              <th scope="row"><%= character.location %></th>
              <th scope="row"><%= character.house %></th> 
          </tr>
        <% end %>
      </tbody>
    </table>
</div>